<% if current_user %>
  <h1><%= @movie.title %>'s Details</h1>
  <hr><br>

  <%= link_to "Create a Viewing Party", new_party_path(movie_id: @movie.id) %>
  <br>

  <h3>Runtime: <%= @movie.runtime %> minutes</h3>
  <h3>Vote Average: <%= @movie.vote_average %></h3>
  <h3>Genres: <%= @movie.genres.join(', ') %></h3>
  <h3>Summary: <%= @movie.summary %></h3>
  <div id='cast'>
    <h3>Cast:</h3>
    <% @movie.cast.each do |member| %>
      <p><%= member.name %> as <%= member.character %></p>
    <% end %>
  </div>
  <hr><br>

  Total Reviews: <%= @movie.reviews.count %>

  <% @movie.reviews.each do |review| %>
    <div id='review-id-<%= review.id %>'>
      <h3><%= review.author %></h3>
      <p>Rating: <%= review.rating %></p>
      <p>Review: "<%= review.content %>"</p>
    </div>
  <% end %>
<% else %>
  <%= render 'partials/login_redirect' %>
<% end %>
